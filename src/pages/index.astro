---
import SiteLayout from "../layouts/SiteLayout.astro";
import { DocumentRenderer } from "@keystatic/core/renderer";
import { reader, solar_componentBlocks_renderers } from "../lib/keystatic.tsx";

const landing = await reader.singletons.landing.read();
const landing_body = await landing?.body();
---

<SiteLayout title="Pamphlet: Spreading the word!">
  {
    landing_body && 
    <DocumentRenderer 
      document={landing_body} 
      componentBlocks={solar_componentBlocks_renderers}
    />
  }
</SiteLayout>
